            android:label="@string/title_activity_chooser" >
        </activity>
        <activity
            android:name=".IdTokenActivity"
            android:label="@string/title_activity_id_token" >
        </activity>
        <activity
            android:name=".Superadmin"
            android:label="@string/title_activity_sign_in" >
        </activity>
        <activity
            android:name=".CreateTeacher"
            android:label="@string/title_activity_sign_in" >
        </activity>
        <activity
            android:name=".ServerAuthCodeActivity"
            android:label="@string/title_activity_server_auth_code" >
        </activity>
        <activity
            android:name=".CustomMarker"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivityOriginal" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivityOriginal" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
